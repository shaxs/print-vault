[run]
# Source code to measure coverage for
source = 
    inventory
    backend

# Omit these files/directories from coverage
omit =
    */migrations/*
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    manage.py
    */admin.py
    */apps.py
    backend/wsgi.py
    backend/asgi.py

# Enable branch coverage (tracks if/else paths taken)
branch = True

# Parallel mode for running tests in parallel (future enhancement)
# parallel = True

[report]
# Precision for coverage percentage
precision = 2

# Show missing lines in coverage report
show_missing = True

# Skip covered files in report (only show files needing work)
skip_covered = False

# Skip empty files
skip_empty = True

# Fail if coverage is below this threshold (80% goal)
fail_under = 0

# Exclude these lines from coverage measurement
exclude_lines =
    # Standard pragma to skip coverage
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about type checking blocks
    if TYPE_CHECKING:
    
    # Don't complain about pass statements
    pass

[html]
# Directory for HTML coverage report
directory = htmlcov

# Title for HTML report
title = PrintVault Test Coverage Report

[xml]
# Output file for XML coverage report (for CI/CD tools)
output = coverage.xml
